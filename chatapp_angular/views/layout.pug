    script(src='//cdnjs.cloudflare.com/ajax/libs/jasny-bootstrap/3.1.3/js/jasny-bootstrap.min.js')
    if (user)
        script(src='https://cdn.socket.io/socket.io-1.4.5.js', integrity='sha384-mp5QqlF7YJplkggFgto52+zx2bKkCQPFNvJWia1rhnEpwcXieUOcgRoLncV3M4NO', crossorigin='anonymous')
        - var u_name = user.username
        script.
            var u_name = '#{u_name}';
            var socket = io();
            socket.emit('joinChat', {uname: u_name});

    block scripts